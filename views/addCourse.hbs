<div class="row">
    <main class="col-md-12">
        <form method="POST" action="/courses/add">
            <fieldset>
                <legend>Course Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Course Code:</label>
                            <input type="text" class="form-control" name="courseCode" required="required" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Course Description:</label>
                            <input type="text" class="form-control" name="courseDescription" required="required" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <hr>

            <input type="submit" class="btn btn-primary float-end" value="Add Course" />
        </form>
    </main>
</div>